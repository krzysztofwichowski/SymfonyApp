{% extends 'base.html.twig' %}

{% block body %}
    {% include('navbar.html.twig') %}
    {% include('flash-messages.html.twig') %}
    <a href="{{ path('create_groups') }}" class="btn btn-primary">Create new group</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Group name</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
        <tr>
            <td>{{ group.name }}</td>
            <td>
                <a href="{{ path('delete_groups', {'groups': group.id}) }}" class="btn btn-danger">Delete</a>
                <a href="{{ path('edit_groups', {'groups': group.id}) }}" class="btn btn-secondary">Edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td>No records found</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}